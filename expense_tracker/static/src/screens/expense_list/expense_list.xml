<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="expense_tracker.PersonalExpenseList">
        <div class="rounded-6 shadow p-4 o_content_modal_rounded_shades height-container expense_list">
            <div class="mb-4 d-flex justify-content-between">
                <h2 class="text-white">
                    Expenses
                </h2>
                <div t-if="props.hasButtons">
                    <button type="button" class="btn btn-primary me-2" t-on-click="_onCreateExpense">
                        <span class="fs-3">Create Expense</span>
                    </button>
                    <button type="button" class="btn btn-primary" t-on-click="_onDeleteExpense">
                        <span class="fs-3">Delete Expense</span>
                    </button>
                </div>
            </div>
            <table class="table table-dark table-hover mb-0">
                <thead>
                    <tr class="table-success">
                        <th t-if="props.hasButtons"></th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="cursor-pointer" t-foreach="state.expenses" t-as="expense" t-key="expense.id">
                        <td t-if="props.hasButtons">
                            <input type="checkbox" class="form-check-input"/>
                        </td>
                        <td><t t-out="expense.name"/></td>
                        <td><t t-out="expense.date"/></td>
                        <td><t t-out="expense.amount"/></td>
                        <td><t t-out="expense.category_id[1]"/></td>
                    </tr>
                </tbody>
                <tfoot t-if="props.showFooter">
                    <tr class="table-dark">
                        <td colspan="3"></td>
                        <td>
                            <b>Total Amount: <t t-esc="totalAmount"/></b>
                        </td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </t>
</templates>
