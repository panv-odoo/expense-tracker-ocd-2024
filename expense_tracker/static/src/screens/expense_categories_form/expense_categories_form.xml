<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="expense_tracker.ExpenseCategoryForm">
        <div class="expense-form">
            <FormView data="state.data" onSave.bind="_onAddCategory">
                <h1 class="text-white"><t t-out="this.title"/></h1>
                <t t-set-slot="content">
                    <div t-attf-class="{{!state.isValidForm and 'o_invalid' or ''}} m-auto mt-4" t-ref="form" style="width:70%">
                        <div t-if="!state.isValidForm" class="alert alert-danger">
                            Please enter right data!
                        </div>
                        <div class="mb-3 row d-flex align-items-center">
                            <label class="fs-2 col-sm-3 col-form-label">Name :</label>
                            <div class="col-sm-9">
                                <input type="text" name="name" t-model="state.data.record.name" class="form-control text-white o_expense_name" required="true" t-att-value="state.data.record and state.data.record.name"/>
                            </div>
                        </div>
                        <div class="mb-3 row d-flex align-items-center">
                            <label class="fs-2 col-sm-3 col-form-label">Description :</label>
                            <div class="col-sm-9">
                                <input type="text" name="decription" t-model="state.data.record.description" class="form-control text-white o_expense_description" required="true" t-att-value="state.data.record and state.data.record.description"/>
                            </div>
                        </div>
                        <div class="mb-3 row d-flex align-items-center">
                            <label class="fs-2 col-sm-3 col-form-label">Icon :</label>
                            <div class="col-sm-9">
                                <input type="text" name="icon" t-model="state.data.record.icon" class="form-control text-white o_expense_icon" required="true" t-att-value="state.data.record and state.data.record.icon"/>
                            </div>
                        </div>
                    </div>
                </t>
            </FormView>
        </div>
    </t>
</templates>
