<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="web.TimerField">
        <div class="text-nowrap d-inline-flex w-100 align-items-baseline position-relative">
            <span><t t-out="getTimeValue.days"/> </span>
            <span> : <t t-out="getTimeValue.hours"/></span>
            <span> : <t t-out="getTimeValue.minutes"/></span>
            <span t-if="!props.noSeconds"> : <t t-out="getTimeValue.seconds"/></span>
        </div>
    </t>

</templates>